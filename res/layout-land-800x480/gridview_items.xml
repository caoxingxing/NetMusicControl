<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content">
	<Button android:id="@+id/album_ctrl_btn" android:layout_height="150dip"
		android:layout_width="200dip" android:layout_centerHorizontal="true"
		android:layout_alignParentTop="true" android:layout_marginTop="10dip"></Button>
	<RelativeLayout android:layout_width="200dip"  android:id="@+id/songnamelistbg"
		android:layout_height="50dip" android:layout_below="@+id/album_ctrl_btn" 
		android:layout_centerHorizontal="true">
		<Button android:id="@+id/album_name_btn" android:layout_height="50dip"
			android:layout_width="155dip" android:gravity="center"
			android:singleLine="true" android:layout_alignParentTop="true"
			android:marqueeRepeatLimit="marquee_forever" android:background="@drawable/albumnamebtn"
			android:layout_alignParentLeft="true" android:ellipsize="end"
			android:textSize="21sp" android:textColor="#ffffffff"></Button>
		<Button android:id="@+id/song_list_btn" android:layout_height="50dip"
			android:layout_width="45dip" android:layout_alignParentTop="true"
			android:layout_toRightOf="@+id/album_name_btn" android:marqueeRepeatLimit="marquee_forever"
			android:ellipsize="end" android:background="@drawable/entrylistbtn"></Button>
	</RelativeLayout>
</RelativeLayout>

